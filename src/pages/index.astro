<style>
  body {
    background-image: url(/img/karrusel_forside.webp);
    background-repeat: no-repeat;
    background-size: contain;
    margin: 1.5rem;
  }
  h1.hero,
  h1.subhero {
    text-align: end;
  }

  .lineup {
    margin-top: 22rem;
  }

  .full_lineup,
  .cut_lineup {
    border: solid;
    border-radius: var(--border-radius-large);
    border-color: var(--pink-100);
    background-image: url(tekstur_forside.svg);
    background-color: rgba(26, 22, 33, 0.7); /* Virker ikke */
    background-blend-mode: overlay;
    padding: 80px;
    margin-bottom: 20rem;
  }
  a {
    color: var(--hvid-100);
    text-decoration: none;
    padding: 0rem;
    margin: 0rem;
    white-space: nowrap;
  }
  .big {
    font-size: 48px;
    line-height: 5rem;
  }
  .medium {
    font-size: var(--font-size-p-button);
    line-height: 3.5rem;
  }
  .small {
    font-size: var(--font-size-p);
    line-height: 2.5rem;
  }
  span {
    color: var(--pink-100);
    font-size: 3.5rem;
    padding-top: 2rem;
  }

  .order {
    display: grid;
  }

  /* Mobile */
  @media (max-width: 800px) {
    h1 {
      display: none;
    }
    .full_lineup {
      display: none;
    }

    .buy {
      order: 1;
    }
  }

  /* Decktop */
  @media (min-width: 800px) {
    h2,
    h3 {
      display: none;
    }
    .cut_lineup {
      display: none;
    }
    a {
      white-space: nowrap;
    }

    .buy {
      order: -1;
    }
  }
</style>
