---
import Button from "./Button.astro";
---

<header>
  <div class="logo">
    <a href="/">
      <img src="/img/karrusel-logo_hvid.webp" alt="Logo" />
    </a>
    <div class="dato_logo">
      <p>28-30 AUG</p>
    </div>
  </div>

  <nav>
    <ul class="menu">
      <li><a href="/artister/">Program</a></li>
      <li><a href="/">Practical info</a></li>
      <li><a href="/">About</a></li>
      <li><a href="/">Follow us</a></li>
      <li><a href="/">Volunteer</a></li>
      <li><Button variant="primary">Buy Now</Button></li>
      <div class="burger">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
      </div>
    </ul>
  </nav>
  <style>
    header {
      display: flex;
      justify-content: space-between;
      background-color: transparent;
      margin: 1.5rem;
    }

    .logo img {
      width: 150px;
      height: 90.75px;
    }

    nav {
      display: flex;
      align-items: center;
    }

    .menu {
      display: flex;
      list-style: none;
      gap: 70px;
    }
    .menu li:last-child {
      margin-right: 0;
    }

    .menu a {
      display: block;
      color: var(--hvid-100);
      text-decoration: none;
      transition: color 0.3s;
      text-align: end;
      font-size: var(--font-size-p);
    }

    .burger_menu {
      display: none;
    }
    .dato_logo {
      margin-top: -2rem;
      margin-left: 7rem;
    }
    .dato_logo p {
      font-size: var(--font-size-p-tiny);
    }

    .menu a:hover {
      color: var(--pink-100);
    }

    .burger {
      width: 40px;
      height: 120px;
      cursor: pointer;
      margin-right: -1rem;
      margin-top: 1.5rem;
    }

    .burger .line {
      width: 100%;
      height: 6px;
      background-color: var(--hvid-100);
      margin-bottom: 10px;
      transition: 0.2s linear;
    }
    @media screen and (min-width: 800px) {
      .burger {
        display: none;
      }
    }
    @media screen and (max-width: 800px) {
      .menu {
        display: none;
      }
      .burger {
        display: block;
      }
      .burger.active .line:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
        transition: 0.2s linear;
      }

      .burger.active .line:nth-child(2) {
        opacity: 0;
        transition: 0.15s linear;
      }

      .burger.active .line:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -5px);
        transition: 0.2s linear;
      }

      nav.active .menu {
        display: block;
        background-color: var(--lilla-100);
        position: absolute;
        top: 50px;
        left: 0%;
        width: 100%;
        z-index: 1;
      }

      nav.active .menu li {
        margin: 10px 20px;
      }

      nav.active .menu a {
        font-size: var(--font-size-p-tiny);
        color: var(--hvid-100);
        text-align: center;
      }

      .logo img {
        margin-left: -25px;
        width: 40%;
        height: auto;
      }
      .dato_logo {
        font-size: var(--font-size-p-tiny);
        margin-left: 4rem;
      }
    }
  </style>
  <script>
    const burger = document.querySelector(".burger");
    const nav = document.querySelector("nav");
    const menu = document.querySelector(".menu");
    const links = document.querySelectorAll(".menu li a");

    burger.addEventListener("click", () => {
      burger.classList.toggle("active");
      nav.classList.toggle("active");
    });

    links.forEach((link) => {
      link.addEventListener("click", () => {
        burger.classList.remove("active");
        nav.classList.remove("active");
      });
    });
  </script>
</header>
