---
const { data } = Astro.props;
---

<li>
<article class="grid">
    <a class="article_knap" href={`/artister/${data.slug}`}>
    <div>
    <img class="test" src=`../../img/${data.image}` alt={data.name} />
    </div>
    <div class="tekst_card">
    <h4>{data.dag} {data.tid}</h4>
    <h4>{data.name}</h4>
     <hr>
    <a class="knap" href={`/artister/${data.slug}`}>Read More</a>
    </div>
    </a>
</article>
</li>

<style>
article {
    margin-inline: -5rem;
    border: solid;
    border-radius: var(--border-radius-large);
    border-color: var(--pink-100);
    }
 @media (max-width: 750px) {
    img, hr, .knap {
        display: none;
    }
 }

  @media (min-width: 750px) {
     img {
    border: solid;
    border-radius: var(--border-radius-large);
    border-color: var(--pink-100);
     }

     .test {
    width: 400px; 
    height: 260px; 
    object-fit: cover;
     }
 
     .tekst_card {
    border: solid;
    border-radius: var(--border-radius-large);
    border-color: var(--pink-100);
     }

.grid {
    display: grid;
    grid-template-columns: 1fr 3fr;
}

 }
</style>